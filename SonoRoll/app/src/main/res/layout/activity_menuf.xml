<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:minHeight="?attr/actionBarSize"
        android:background="@color/colorPrimaryDark"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <FrameLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="48dp">

            <TextView
                android:layout_gravity="center|left"
                android:textSize="24dp"
                android:textColor="#fff"
                android:text="@string/app_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/btnCarritoSelecSuc"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center|right"
                android:background="@drawable/shoppingcartsolid"/>
        </FrameLayout>

    </android.support.v7.widget.Toolbar>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="15dp">
    <FrameLayout
        android:id="@+id/layHamMenuF"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/borde_circular"
        android:layout_marginBottom="15dp"
        android:clickable="true"
        android:padding="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hamburguesas"
            android:textSize="24dp"
            android:layout_gravity="center|left"
            />

        <Button
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center|right"
            android:background="@drawable/rigthchervon"/>

    </FrameLayout>

    <FrameLayout
        android:id="@+id/laySopaMenuF"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/borde_circular"
        android:clickable="true"
        android:layout_marginBottom="15dp"
        android:padding="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sopas"
            android:textSize="24dp"
            android:layout_gravity="center|left"
            />

        <Button
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center|right"
            android:background="@drawable/rigthchervon"/>

    </FrameLayout>

    <FrameLayout
        android:id="@+id/laySushisMenuF"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/borde_circular"
        android:clickable="true"
        android:layout_marginBottom="15dp"
        android:padding="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sushis"
            android:textSize="24dp"
            android:layout_gravity="center|left"
            />

        <Button
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center|right"
            android:background="@drawable/rigthchervon"/>

    </FrameLayout>
    </LinearLayout>

</LinearLayout>